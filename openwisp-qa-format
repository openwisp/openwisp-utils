#!/bin/bash
set -e

isort .
black .
docstrfmt --no-docstring-trailing-line --ignore-cache \
  --section-adornments "=-~+^\"\'.:" \
  --line-length 74 .

if which prettier > /dev/null; then
  prettier --write "**/*.+(yml|yaml|md|js|json|css)" --print-width 88
else
  echo "SKIPPED CSS FILES: Please install prettier"
fi
